<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/icon"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_height="35dp"
        android:textColor="#fffafafa"
        android:background="@drawable/button_selector"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:textSize="18sp"
        android:gravity="center"
        android:onClick="liveresults"
        android:textAllCaps="false"
        android:text="@string/Live_string"/>

    <Button
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:onClick="class_results"
        android:textColor="#fffafafa"
        android:background="@drawable/button_selector"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:layout_height="35dp"
        android:textAllCaps="false"
        android:text="@string/Class_string"/>


    <Button
        android:layout_width="200dp"
        android:background="@drawable/button_selector"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:layout_height="35dp"
        android:textColor="#fffafafa"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:onClick="analyze"
        android:textAllCaps="false"
        android:text="@string/Old_string"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textColor="#fffafafa"
        android:textSize="18sp"
        android:background="@drawable/button_selector"
        style="@style/Base.TextAppearance.AppCompat.Medium.Inverse"
        android:onClick="schedule_check"
        android:text="@string/Schedule_string"/>


</LinearLayout>